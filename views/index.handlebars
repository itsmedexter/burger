<div id="main_container">

<div class="container2">
<h2>Burgers Added</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
<span>
{{this.id}} - {{this.burger_name}}
</span>
<button type="button" class="eat-burger" id="eat-button" data-id="{{this.id}}" data-newDevoured={{devour}}>Yum Yum!</button><br><br>
{{/unless}}
  {{/each}}
</ul>
</div>

<div class="container3">
<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<span><strong>
{{this.id}} - {{this.burger_name}}
</strong></span>
<button type="button" class="delete-burger" id="delete-button" data-id="{{this.id}}" data-newDevoured={{devour}}>Devoured</button><br>
    {{/if}}
  {{/each}}
</ul>
</div>


<div class="container1">
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newburger">Burger Name:</label>
    <input type="text" id="newburger" name="burger_name">
  </div>



  {{!-- <div class="form-group">
    <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> burger
  </div> --}}

  <button type="submit">Add burger</button>
</form>
</div>

</div>{{!--  main container div --}}
